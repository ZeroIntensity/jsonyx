{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "JSON Patch Operations",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "op": {
                "type": "string",
                "enum": ["del", "insert", "set"],
                "description": "The operation to be performed."
            },
            "path": {
                "type": "string",
                "description": "A path expression for the target location."
            },
            "value": {
                "description": "The value to be used."
            }
        },
        "required": ["op", "path"],
        "if": {
            "properties": {"op": {"enum": ["insert", "set"]}}
        },
        "then": {
            "required": ["value"]
        },
        "additionalProperties": true
    }
}